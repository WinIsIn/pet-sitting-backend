{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.js", 
      "use": "@vercel/node",
      "config": {
        "installCommand": "npm install --legacy-peer-deps"
      }
    },
    { 
      "src": "frontend/build/**", 
      "use": "@vercel/static",
      "config": {
        "buildCommand": "cd frontend && npm ci && CI=false npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}


